let $line-wrap := function($in,$length as xs:integer) {
  partition(
     tokenize($in), 
     fn($partition, $next) {
        sum(($partition, $next) ! string-length()) + count($partition) gt $length
     }
  ) =!> string-join(" ")
}
let $sentences := normalize-space(.) => tokenize("\.\s*") => filter(matches(?,"\S"))
return
  for $s in $sentences 
      return $line-wrap($s,30) => string-join("&#xA;") => concat(".")